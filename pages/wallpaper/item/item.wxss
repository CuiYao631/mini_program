/* pag/pag.wxss */
.img {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -99999;
}

.img image {
  width: 100%;
  height: 100%;
}

.action_view {
  position: fixed;
  /* 固定、停靠定位 */
  bottom: 53px;
  /* 距离底部位置 */
  left: 150px; 
  /* 距离左侧位置 */
  background-color: rgba(246, 246, 246, 0.719);
  /* 背景色及透明度 */
  border-radius: 10px;
  z-index: 100;
  padding: 7px 27px;
  display: flex;
  /* flex布局 */
  align-items: center;
  /* 主轴方向居中对齐 */
  text-align: center;
}

.back {
  position: fixed;
  /* 固定、停靠定位 */
  top: 53px;
  /* 距离底部位置 */
  left: 20px;
  /* 距离左侧位置 */
  background-color: rgba(246, 246, 246, 0.719);
  /* 背景色及透明度 */
  border-radius: 20px;
  z-index: 100;
  padding: 3px 27px;
  display: flex;
  /* flex布局 */
  align-items: center;
  /* 主轴方向居中对齐 */
  text-align: center;
}
.bt{
  top: 700px;
  background-color: #9db17000;
  border-radius:10px;
  /* border: 1px solid white; */
  box-shadow: 0px 0px 5px 5px #fdfdfda9;
  color: rgb(0, 0, 0);
  height: 6vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  text-shadow: 0 0 3px #ffffff, 0 0 3px #ffffff;
}